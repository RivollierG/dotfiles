{
    "telemetry.telemetryLevel": "off",
    "jupyter.askForKernelRestart": false,
    "notebook.consolidatedRunButton": true,
    "notebook.showFoldingControls": "always",
    // in prder to enable pylance semantic highlithing in coodium
    // see https://github.com/VSCodium/vscodium/issues/892
    "python.languageServer": "Jedi",
    "python.formatting.provider": "black",
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "editor.formatOnSave": true,
    "terminal.integrated.inheritEnv": false,
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.includeName": true,
    "editor.largeFileOptimizations": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "firacode nerd font",
    "terminal.explorerKind": "external",
    "editor.unusualLineTerminators": "auto",
    "git.autofetch": true,
    "git.confirmSync": false,
    "terminal.integrated.fontFamily": "firacode nerd font",
    "indentRainbow.indicatorStyle": "classic",
    "indentRainbow.colors": [
        "rgba(247, 37, 133,0.15)",
        "rgba(181, 23, 158,0.15)",
        "rgba(114, 9, 183, 0.15)",
        "rgba(86, 11, 173,0.15)",
        "rgba(72, 12, 168,0.15)",
        "rgba(58, 12, 163,0.15)",
        "rgba(63, 55, 201,0.15)",
        "rgba(63, 55, 201,0.1)",
        "rgba(63, 55, 201,0.05)",
        "rgba(63, 55, 201,0.025)"
    ],
    "window.confirmBeforeClose": "keyboardOnly",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.semanticHighlighting.enabled": true,
        "editor.wordBasedSuggestions": true
    },
    "editor.semanticHighlighting.enabled": true,
    "tabnine.experimentalAutoImports": true,
    "security.workspace.trust.untrustedFiles": "open",
    "gitblame.inlineMessageEnabled": true,
    "gitblame.inlineMessageFormat": "${commit.summary} | ${commit.hash, 5} | ${author.name} | ${time.ago}",
    "gitblame.inlineMessageNoCommit": "--- Not Committed Yet ---",
    "gitblame.inlineMessageMargin": 5,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "Solarized Light",
    "explorer.confirmDragAndDrop": false
}